<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">
    <meta name="description" content="Front-end developer and designer creating user interfaces and digital brand identities.">
    <meta name="google-site-verification" content="bAaBl8KxiAcccw9eBX5Q8ioYPJFtw6gv4kllGczspiY">
    <%= favicon_tag 'favicon.ico' %>

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Samuel Lie" %></title>

    <%= stylesheet_link_tag :site %>

    <script src="https://use.typekit.net/nfj0peo.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>
    <% if build? %>
      <script type="text/javascript" id="gretaScript" src="https://cdn.greta.io/greta.min.js" data-ac="d1f1ea6d3d102b3b7cb91214fec33de1"></script>
    <% end %>
  </head>

  <body class="<%= page_classes %>">
    <div id="preloader"></div>

    <div class="main-content container">
      <%= yield %>
    </div>

    <div id="code-bg">
      <div id="code-overlay"></div>
      <div id="code-lines"></div>
      <div id="code-js"></div>
    </div>

    <script type="text/javascript" src="javascripts/vendor/prism.js"></script>
    <%= javascript_include_tag :all %>
    <% if build? %>
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-76482232-1', 'auto');
        ga('send', 'pageview');
      </script>
    <% end %>
  </body>
</html>
